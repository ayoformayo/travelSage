 <%= form_tag("/filter", method: "post", class: ["filterForm", "hidden"]) do %>
  <%= label_tag(:city, "Filter by City:") %>
  <%= text_field_tag(:city) %>
  <%= label_tag(:writer, "Filter by Writer Name:") %>
  <%= text_field_tag(:writer) %>
  <%= label_tag(:category, "Filter by Category:") %>
  <%= select_tag(:category, options_for_select([["Fun",1],["Culture",2]])) %>
  <%= label_tag(:writer_type, "Filter by Writer Type:") %>
