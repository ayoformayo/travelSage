$(document).ready(function () {
  $("#new_comment").on("ajax:success", function (e, data, status, xhr) {
      $(".article_comments").append(data);
  }).bind("ajax:error", function (e, xhr, status, error) {
      $("#new_comment").append("<p>ERROR</p>");
  });
});

$('.article_comments').ready(function(){
  $('.commentVoteLink').on("ajax:success", function (e, data, status, xhr){
    var selector = "#comment"+data.voteableId
    // WHY is the above selector not working?
    alert(selector)
    $(selector).html(data.voteCount)
  }).bind("ajax:error", function (e, xhr, status, error) {
      $("#new_comment").append("<p>ERROR</p>");
  });

})

function toggleFilter(event){
  event.preventDefault();
  $('.filterForm').toggleClass('hidden');
}

$('.callToAction').ready(function(){
  $('.filterButton').click(toggleFilter);

})
